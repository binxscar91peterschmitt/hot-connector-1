      "version": "1.0.0",
      "executor": "/mnw.js",
      "type": "sandbox",
      "permissions": {
        "storage": true,
        "open": {
          "allows": ["https://app.mynearwallet.com"]
        }
      }
    },
    {
      "id": "ledger",
      "platform": ["android", "ios", "web"],
      "name": "Ledger",
      "icon": "https://img.cryptorank.io/coins/ledger1673447427161.png",
